<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <h1>Sign Up!</h1>
    <form method="POST" action="/sign-up">
      <input
        type="email"
        name="email"
        id="email"
        placeholder="Enter Email"
        required
      />
      <input
        type="text"
        name="username"
        id="username"
        placeholder="Username:"
        required
      />
      <input
        type="password"
        name="password"
        id="password"
        placeholder="Password"
        required
      />
      <input
        type="password"
        name="confirmPasword"
        id="confirmPassword"
        placeholder="Enter Password again"
        required
      />

      <button>Sign Up</button>
    </form>
    <%-include("./partials/errors.ejs")%>
    <script></script>
  </body>
</html>
